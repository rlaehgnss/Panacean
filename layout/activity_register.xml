<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightYellow">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="136dp"
        android:textColor = "@color/black"
        android:text="회원가입"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/join_button"
        style="@style/defaultButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:textColor="@color/white"
        android:background="@color/black"
        android:text="회원가입"
        app:layout_constraintEnd_toEndOf="@+id/join_age"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/join_age"
        app:layout_constraintTop_toBottomOf="@+id/join_age" />

    <EditText
        android:id="@+id/join_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:textColorHighlight="@color/Gray"
        android:backgroundTint="@color/Gray"
        android:textColorHint="@color/Gray"
        android:textColor="@color/Black"
        app:layout_constraintEnd_toEndOf="@+id/join_id"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/join_id"
        app:layout_constraintTop_toBottomOf="@+id/join_id" />

    <EditText
        android:id="@+id/join_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="나이"
        android:textColor="@color/Black"
        android:backgroundTint="@color/Gray"
        android:textColorHint="@color/Gray"
        android:inputType="textPersonName"
        android:textColorHighlight="@color/Gray"
        app:layout_constraintEnd_toEndOf="@+id/join_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/join_name"
        app:layout_constraintTop_toBottomOf="@+id/join_name" />

    <EditText
        android:id="@+id/join_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="이름"
        android:backgroundTint="@color/Gray"
        android:textColorHint="@color/Gray"
        android:textColor="@color/Black"
        android:inputType="textPersonName"
        android:textColorHighlight="@color/Gray"
        app:layout_constraintEnd_toEndOf="@+id/join_password"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/join_password"
        app:layout_constraintTop_toBottomOf="@+id/join_password" />

    <EditText
        android:id="@+id/join_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="212dp"
        android:ems="10"
        android:hint="아이디"
        android:backgroundTint="@color/Gray"
        android:textColorHint="@color/Gray"
        android:textColorHighlight="@color/Gray"
        android:textColor="@color/Black"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>